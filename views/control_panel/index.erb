<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Control Panel</title>
    <link rel="stylesheet" href="/styles/master.css">
    <link rel="stylesheet" href="/styles/controls.css">
    <link rel="stylesheet" href="/styles/footer.css">
  </head>
  <body>
    <div id="main_container">
      <section id="team_container">
        <ol>

          <% @teams.each() do |team| %>

            <li>
              <article>
                <p><%= team.name %></p>
                <p>Points: <%= team.score %></p>
                <form action="/panel/<%= team.id %>">
                  <label>Team Name</label>
                  <input type="Text" value="<%= team.name %>">
                  <label>Points</label>
                  <input type="number" value="<%= team.score %>">
                  <input type="submit" value="Update">
                </form>
              </article>
            </li>

          <% end %>

        </ol>
      </section>

      <footer>
        <ul>
          <li>Game Page</li>
        </ul>
      </footer>
      
    </div>
  </body>
</html>
